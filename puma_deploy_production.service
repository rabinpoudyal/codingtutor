
[Unit]
Description=Puma HTTP Server
After=network.target

[Service]
Type=simple
User=myuser
WorkingDirectory=/home/deploy/deploy/current
Environment=RAILS_ENV=production

ExecStart=bundle exec puma -C /home/deploy/deploy/current/config/puma/production.rb
Restart=always
KillMode=process

[Install]
WantedBy=multi-user.target