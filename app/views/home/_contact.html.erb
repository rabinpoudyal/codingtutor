<section class="py-5">
  <div class="container">
    <div class="row mb-5">
      <div class="col-md-8 col-xl-6 text-center mx-auto">
        <h2 class="">Ask Us</h2>
        <div class="seperator-line mx-auto"></div>
        <p
          class="text-muted"
        >
          Feel Free to Connect with Us for Any Queries or Information. Our Team Typically Replies Within 24 Hours.
        </p>
      </div>
    </div>
    <div class="row d-flex justify-content-center">
      <div class="col-md-6 col-xl-4">
      <div>
        <%= form_with(url: home_contacts_path, method: :post, data: { bs_theme: 'light' }, class: 'p-3 p-xl-4', id: 'contact-form') do |form| %>
          <div class="mb-3">
            <%= form.text_field :name, class: 'form-control', id: 'name-1', placeholder: 'Name' %>
          </div>
          <div class="mb-3">
            <%= form.email_field :email, class: 'form-control', id: 'email-1', placeholder: 'Email' %>
          </div>
          <div class="mb-3">
            <%= form.text_area :message, class: 'form-control', id: 'message-1', rows: 6, placeholder: 'Your Inquiry' %>
          </div>
          <div>
            <%= form.submit class: 'contact-button shadow d-block w-100 g-recaptcha', 'data-sitekey': "6Lcnyq4nAAAAAHWq7pCyV1XIaSQw0mrhEqAEylq3", 'data-callback': 'onSubmit', 'data-action': 'submit' do %>
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="white" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="feather feather-send"><line x1="22" y1="2" x2="11" y2="13"></line><polygon points="22 2 15 22 11 13 2 9 22 2"></polygon></svg>
              Submit
            <% end %>
          </div>
        <% end %>
      </div>

      </div>
      <div
        class="col-md-4 col-xl-4 d-flex justify-content-center justify-content-xl-start"
      >
        <div
          class="d-flex flex-wrap flex-md-column justify-content-md-start align-items-md-start h-100"
        >
          <div class="d-flex align-items-center p-3">
            <div
              class="bs-icon-md bs-icon-circle bs-icon-success shadow d-flex flex-shrink-0 justify-content-center align-items-center d-inline-block bs-icon bs-icon-md"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="1em"
                height="1em"
                fill="#fff"
                viewBox="0 0 16 16"
                class="bi bi-envelope"
              >
                <path
                  d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z"
                ></path>
              </svg>
            </div>
            <div class="px-2">
              <h6 class="fw-bold mb-0">Email</h6>
              <p class="text-muted mb-0">info@codingtutor.online</p>
            </div>
          </div>
          <div class="d-flex align-items-center p-3">
            <div
              class="bs-icon-md bs-icon-circle bs-icon-dark shadow d-flex flex-shrink-0 justify-content-center align-items-center d-inline-block bs-icon bs-icon-md"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="1em"
                height="1em"
                fill="#fff"
                viewBox="0 0 16 16"
                class="bi bi-pin"
              >
                <path
                  d="M4.146.146A.5.5 0 0 1 4.5 0h7a.5.5 0 0 1 .5.5c0 .68-.342 1.174-.646 1.479-.126.125-.25.224-.354.298v4.431l.078.048c.203.127.476.314.751.555C12.36 7.775 13 8.527 13 9.5a.5.5 0 0 1-.5.5h-4v4.5c0 .276-.224 1.5-.5 1.5s-.5-1.224-.5-1.5V10h-4a.5.5 0 0 1-.5-.5c0-.973.64-1.725 1.17-2.189A5.921 5.921 0 0 1 5 6.708V2.277a2.77 2.77 0 0 1-.354-.298C4.342 1.674 4 1.179 4 .5a.5.5 0 0 1 .146-.354zm1.58 1.408-.002-.001.002.001zm-.002-.001.002.001A.5.5 0 0 1 6 2v5a.5.5 0 0 1-.276.447h-.002l-.012.007-.054.03a4.922 4.922 0 0 0-.827.58c-.318.278-.585.596-.725.936h7.792c-.14-.34-.407-.658-.725-.936a4.915 4.915 0 0 0-.881-.61l-.012-.006h-.002A.5.5 0 0 1 10 7V2a.5.5 0 0 1 .295-.458 1.775 1.775 0 0 0 .351-.271c.08-.08.155-.17.214-.271H5.14c.06.1.133.191.214.271a1.78 1.78 0 0 0 .37.282z"
                ></path>
              </svg>
            </div>
            <div class="px-2">
              <h6 class="fw-bold mb-0">Location</h6>
              <p class="text-muted mb-0">Sydney, Australia</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>